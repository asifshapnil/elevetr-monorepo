{
  "name": "elevetr-monorepo",
  "version": "1.0.0",
  "description": "Elevetr Job Assistant Monorepo",
  "private": true,
  "workspaces": [
    "Job-Assistant",
    "job-assistant-fe"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd Job-Assistant && npm install",
    "install:frontend": "cd job-assistant-fe && npm install",
    "dev:backend": "cd Job-Assistant && npm run start:dev",
    "dev:frontend": "cd job-assistant-fe && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "cd Job-Assistant && npm run build",
    "build:frontend": "cd job-assistant-fe && npm run build",
    "build:all": "npm run build:backend && npm run build:frontend",
    "test:backend": "cd Job-Assistant && npm test",
    "test:frontend": "cd job-assistant-fe && npm test",
    "test:all": "npm run test:backend && npm run test:frontend",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd Job-Assistant && rm -rf node_modules dist",
    "clean:frontend": "cd job-assistant-fe && rm -rf node_modules dist build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
